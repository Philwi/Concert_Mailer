$(document).on('click','#Band', function(){
  var id = this.value
  $('.js-lazy-load-band-edit').load("/bands/edit?id="+id)
})
// validations
$(document).on('click','.submit-button-band', function(e){
  var errorLog = 'Bitte folgende Fehler beheben: \n';
  var send = true;
  if ($('.band_name').val().length < 3){
    errorLog += '\tNamen eintragen\n';
    e.preventDefault();
    send = false;
  };
  var emailVal = validateEmail($('.band_email').val());
  if (!emailVal){
    errorLog += '\tE-Mail ist nicht korrekt\n';
    e.preventDefault();
    send = false;
  };
  if (send == false){
    alert(errorLog);
  }
  function validateEmail(email) {
    var re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
    return re.test(String(email).toLowerCase());
  };
})
