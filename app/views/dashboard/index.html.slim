= render 'dashboard/actions/kontakte'
= render 'dashboard/actions/nachrichten'
= render 'dashboard/actions/statistiken'
= render 'dashboard/actions/kalender'
= render 'dashboard/actions/einstellungen'
= render 'dashboard/actions/news'
= render 'dashboard/actions/contact'

javascript:
  $('.main-nav ul li').click(function() {
  $('.main-nav ul li').removeClass('active');
  $(this).addClass('active');
  });

  $('.menuicon').click(function() {
    $('.ul-menu').css('bottom', '-150%');
    $(this).next('.ul-menu').css('bottom', '0');
  });

  $('.ul-menu-close').click(function() {
    $('.ul-menu').css('bottom', '-150%');
  });

  $('.flash_notice').fadeOut(5000);
  $('.flash_error').fadeOut(5000);


