javascript:
  $(document).on('click','.submit-button-kontaktanfrage', function(e){
    var errorLog = 'Bitte folgende Fehler beheben: \n';
    var send = true;
    if ($('#kontaktanfrage_subject').val().length < 3){
      errorLog += '\tTitel eintragen\n';
      e.preventDefault();
      send = false;
    };
    if ($('#kontaktanfrage_body').val().length < 3){
      errorLog += '\tText eintragen\n';
      e.preventDefault();
      send = false;
    };
    if (send == false){
      alert(errorLog);
    };
    });
